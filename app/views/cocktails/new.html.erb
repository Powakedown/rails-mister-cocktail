<div class="container">
  <div class="content">
  <h1>Ajouter un nouveau cocktail</h1>
  <hr>
  <%= simple_form_for(@cocktail, html: { class: 'form-horizontal' }) do |f| %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>

    <div class="text-center">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
</div>


