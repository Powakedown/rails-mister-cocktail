<div class="container">
  <div class="content">
  <h1>Ajouter un nouveau cocktail</h1>
  <hr>
  <%= simple_form_for(@cocktail, html: { class: 'form-horizontal' }) do |f| %>
    <%= f.input :name, label: 'Nom du Cocktail', error: 'Le nom est obligatoire, please specify one' %>

    <div class="text-center">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
</div>
