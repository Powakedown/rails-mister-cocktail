<div class="container text-center">
  <div class="content-medium">
  <h1>Cr√©er un nouveau cocktail</h1>

  <%= simple_form_for(@cocktail, html: { class: 'form-horizontal' }) do |f| %>
    <div class="form-group">
      <%= f.input :name, label: 'Nom du Cocktail', :label_html => { :class => 'form-control-label' }, :input_html => { :class => 'form-control' }, error: 'Le nom est obligatoire, please specify one' %>
    </div>
    <div class="form-group">

      <label class="custom-file">
        <%= f.input :photo, label: 'Charger une photo', :label_html => { :class => 'form-control-label' }, :input_html => { :class => 'custom-file-input' } %>
        <span class="custom-file-control"></span>
      </label>

      <%= f.input :photo_cache, as: :hidden %>
    </div>
    <%= f.button :submit, class: 'btn btn-primary' %>
 <% end %>
  </div>
</div>
